{
  "name": "aula7/mvc",
  "description": "Sistema de Gerenciamento de Produtos com DevOps",
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": "^8.2",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": "php -S localhost:8080 -t .",
    "test": "phpunit -c phpunit.xml",
    "test-coverage": "phpunit -c phpunit.xml --coverage-html coverage",
    "phpstan": "phpstan analyse app --level=5",
    "cs-check": "phpcs --standard=PSR12 app",
    "cs-fix": "phpcbf --standard=PSR12 app",
    "ci": [
      "@test",
      "@phpstan",
      "@cs-check"
    ]
  }
}